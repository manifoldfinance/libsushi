{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "dist",
    "importHelpers": true,
    "downlevelIteration": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules", "**/.*/", "src/**/*.test.ts"]
}
