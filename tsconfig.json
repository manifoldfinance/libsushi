{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "jsx": "react",
    "module": "ES2018",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
