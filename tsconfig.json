{
  "compilerOptions": {
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["app/_config/*"],
      "@environment/*": ["environments/*"],
      "@shared/*": ["src/_shared/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interface/*": ["src/interface/*"],
      "@guard/*": ["src/SushiGuard/*"],
    },
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020",
      "esnext"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}